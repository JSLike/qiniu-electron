{
  "name": "like-app",
  "description": "云端同步文件管理系统",
  "author": {
    "name": "LIKE",
    "email": "1622698496@qq.com"
  },
  "repository":{
      "type" : "git",
      "url" : "https://github.com/JSLike/qiniu-electron"
  },
  "version": "0.1.1",
  "main": "main.js",
  "private": true,
  "dependencies": {
    "bootstrap": "^4.5.3",
    "electron-store": "^6.0.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-brands-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.12",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "node-sass": "^4.14.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.0",
    "react-simplemde-editor": "^4.1.3",
    "uuid": "^8.3.1",
    "wait-on": "^5.2.0",
    "web-vitals": "^0.2.4",
    "webpack-cli": "^4.2.0",
    "classnames": "^2.2.6",
    "axios": "^0.21.0",
    "qiniu": "^7.3.2",
    "electron-is-dev": "^1.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "buildMain": "webpack",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "ele": "electron .",
    "dev": "concurrently \"wait-on http://localhost:9000 && yarn ele \" \" cross-env BROWSER=none PORT=9000 yarn start \"  ",
    "onlyEle": "nodemon  --watch main.js --watch src/menuTemplate.js --exec \"electron .\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "prepack": " npm run build && npm run buildMain",
    "predist": "npm run build && npm run buildMain",
    "distMac": "electron-builder",
    "release": "cross-env GH_TOKEN=40a6842ecf815fc909e82e9d8a199bda electron-builder",
    "prerelease": "npm run build && npm run buildMain"
  },
  "homepage": "./",
  "build": {
    "appId": "like",
    "productName": "我的LIKE",
    "copyright": "Copyright © 2020 ${author}",
    "extends": null,
    "extraMetadata": {
      "main": "./build/main.js"
    },
    "publish": {
      "provider": "github",
      "protocol": "https://github.com/JSLike/qiniu-electron.git",
      "token": "1df91ba0bdaef643e4bf8a6705bd276db7d02ae4"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "settings/**/*",
      "pacage.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": [
        "default",
        "dmg"
      ],
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "background": "assets/appdmg.png",
      "icon": "assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Web-Setup-${version}.${ext}",
      "publisherName": "LIKE"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
